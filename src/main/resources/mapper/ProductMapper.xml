<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.youtube.sandbox.mapper.ProductMapper">
    <select id="findAll" resultType="Product">
        SELECT * FROM products
    </select>

    <select id="find" resultType="Product" parameterType="int">
        SELECT * FROM products
        WHERE id = #{id}    
    </select>

    <select id="add" parameterType="Product" resultType="int">
        INSERT INTO products (name, price)
        VALUES (#{name}, #{price})
        RETURNING id
    </select>
</mapper>